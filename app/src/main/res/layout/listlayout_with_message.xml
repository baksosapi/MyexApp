            android:layout_height="1.0dip"
            android:layout_marginTop="4.0dip"
            android:background="@android:color/darker_gray"
            android:paddingBottom="4.0dip"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/message"
